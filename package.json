{
  "name": "boss",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "core-js": "^2.5.3",
    "date-fns": "^1.29.0",
    "hash.js": "^1.1.3",
    "lodash": "^4.17.4",
    "raf": "^3.4.0",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-helmet": "5.2.0",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-router-redux": "4.0.8",
    "recompose": "^0.27.0",
    "redux": "4.0.0",
    "redux-persist": "5.10.0",
    "swiper": "4.0.7",
    "whatwg-fetch": "2.0.3"
  },
  "lint-staged": {
    "src/app/**/*.{js,jsx,css,scss,json}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "node scripts/start.js",
    "prettier":
      "prettier --single-quote --no-semi --print-width 80 --write 'src/app/**/*.{js,jsx,css,scss,json}'",
    "precommit": "lint-staged",
    "analyze": "source-map-explorer build/static/js/",
    "build": "node scripts/build.js",
    "test":
      "node scripts/test.js --env=jsdom  --setupTestFrameworkScriptFile=raf/polyfill --config=jest.config.json",
    "coverage": "yarn test --coverage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": {
    "/app/*": {
      "target": "http://www.ih5.cn",
      "secure": false,
      "changeOrigin": true,
      "preserveHeaderKeyCase": true,
      "hostRewrite": true,
      "autoRewrite": true,
      "protocolRewrite": "https",
      "cookieDomainRewrite": {
        "*": "localhost"
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-eslint": "8.1.2",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.1",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-object-entries": "^1.0.0",
    "babel-preset-react-app": "^3.0.3",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chai": "^4.1.2",
    "chalk": "1.1.3",
    "compression-webpack-plugin": "^1.0.1",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "husky": "^0.14.3",
    "jest": "20.0.4",
    "lint-staged": "^4.3.0",
    "node-sass": "^4.7.2",
    "node-sass-chokidar": "^0.0.3",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "prettier": "^1.9.1",
    "react-dev-utils": "^4.1.0",
    "react-test-renderer": "16",
    "redux-mock-store": "^1.5.1",
    "resolve-url-loader": "^2.1.1",
    "sass-loader": "^6.0.6",
    "sinon": "^4.2.2",
    "source-map-explorer": "^1.5.0",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.8.2",
    "webpack-manifest-plugin": "1.2.1"
  }
}
